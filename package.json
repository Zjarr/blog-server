{
  "name": "blog-server",
  "description": "Server for personal blog",
  "author": "Pablo Navarro",
  "version": "1.0.0",
  "license": "GPL-3.0",
  "scripts": {
    "build": "npm run clear && tsc",
    "clear": "rimraf ./build",
    "lint:fix": "eslint . --fix --ext .ts",
    "lint": "eslint . --ext .ts",
    "start:dev": "concurrently \"mongod --config /usr/local/etc/mongod.conf\" \"nodemon\"",
    "start": "node ./build/server.js"
  },
  "dependencies": {
    "apollo-server-express": "^2.16.0",
    "bcrypt": "^5.0.0",
    "cloudinary": "^1.22.0",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "moment": "^2.27.0",
    "mongoose": "^5.9.25",
    "mongoose-paginate-v2": "^1.3.9"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/express": "^4.17.7",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/mongoose": "^5.7.32",
    "@types/mongoose-paginate-v2": "^1.3.7",
    "@types/node": "^14.0.23",
    "@typescript-eslint/eslint-plugin": "^3.6.1",
    "@typescript-eslint/parser": "^3.6.1",
    "concurrently": "^5.2.0",
    "dotenv": "^8.2.0",
    "eslint": "^7.5.0",
    "husky": "^4.2.5",
    "nodemon": "^2.0.4",
    "rimraf": "^3.0.2",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.7"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm run build"
    }
  },
  "nodemonConfig": {
    "events": {
      "start": "npm run lint"
    },
    "exec": "node -r ts-node/register -r dotenv/config server.ts",
    "ext": ".ts",
    "ignore": [
      "./node_modules/**"
    ],
    "watch": [
      "./"
    ]
  },
  "engines": {
    "node": "12.18.2",
    "npm": "6.14.5"
  }
}
